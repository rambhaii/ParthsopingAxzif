    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:background="@color/white"
        android:layout_gravity="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <include
                   layout="@layout/navigation_drawer_header"
                   android:id="@+id/layoutv"/>



                <androidx.core.widget.NestedScrollView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/layoutv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scrollbars="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:orientation="vertical">

                        <View
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:background="@color/Background"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_height="@dimen/_1sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_profile"
                            android:drawableTint="@color/Background"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="Profile"
                            android:id="@+id/Profile"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/Background"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:text="Order History"
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/orderhistory"
                            android:textColor="@color/Background"
                            android:drawableTint="@color/Background"
                            android:drawableLeft="@drawable/ic_order"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_share_black_24dp"
                            android:drawableTint="@color/Background"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="Share"
                            android:id="@+id/Share"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/Background"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_support"
                            android:drawableTint="@color/Background"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="Help Centre"
                            android:id="@+id/support"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/Background"
                            android:textStyle="bold"
                            />


                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_baseline_login_24"
                            android:drawableTint="@color/Background"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="Login"
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/bt_login"
                            android:textColor="@color/Background"
                            android:textStyle="bold" />


                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_logout"
                            android:drawableTint="@color/Background"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="Logout"
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/ic_logout"
                            android:textColor="@color/Background"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:id="@+id/tv_version"
                              android:layout_gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                             android:padding="@dimen/_7sdp"
                            android:text="Version : 1.2"
                            android:textColor="@color/Background"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>

