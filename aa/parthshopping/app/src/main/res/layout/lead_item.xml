<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content">


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/idCardView"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_inset="8dp"
        app:neumorph_insetBottom="8dp"
        app:neumorph_insetEnd="8dp"
        app:neumorph_insetStart="8dp"
        app:neumorph_insetTop="8dp"
        app:neumorph_shadowColorDark="#07646363"
        app:neumorph_shadowColorLight="#0C646363"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_shapeAppearance="@style/productShapeAppearance"
        app:neumorph_strokeColor="#0C888787"
        app:neumorph_strokeWidth="0.5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp">


                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        />


                    <TextView
                        android:id="@+id/Temporarily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="Temporarily Unavailable"
                        android:textColor="@color/back_bg" />


                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/ic_circle"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/cart_item"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignRight="@+id/cart_item"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/ic_supermarket"
                            android:tint="@color/Background" />

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textlong"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:gravity="left|center"
                            android:maxLines="2"
                            android:text="Remember Rememberdddsssssssssssss Remember  Remember"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2ssp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:gravity="left|center"
                        android:maxLength="15"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Remember"
                        android:textColor="@color/background"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/outofstock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="Out Of Stock  "
                            android:textColor="@color/red"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:isIndicator="true"
                            android:numStars="5"

                            android:stepSize="5" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/green"
                        android:drawableRight="@drawable/ic_star"
                        android:gravity="left|center"
                        android:maxLength="15"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/finalamout_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="@dimen/_4sdp"
                            android:drawableTint="@color/black"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:text="2222"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_centerVertical="true"
                                android:background="@color/back_bg"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="serif"
                                android:singleLine="true"
                                android:text=" 165"
                                android:textColor="@color/back_bg"
                                android:textSize="11sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/dicsunte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="serif"
                            android:singleLine="true"

                            android:text=" 165"
                            android:textColor="@color/green"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/rectmsg"
                        android:backgroundTint="@color/buttoncolour"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Add"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="#8B0404"
                            android:src="@drawable/ic_plus_sign"
                            android:tint="@color/white" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#F7F2F2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/do_wish"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="@color/colorBackground"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/do_wish_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/cart_item"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_heart"
                    android:tint="@color/white" />

            </LinearLayout>


        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>








</RelativeLayout>
