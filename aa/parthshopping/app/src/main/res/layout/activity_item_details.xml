                  android:layout_marginRight="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_1sdp"
                  android:textSize="12dp"
                   android:layout_marginTop="@dimen/_10sdp"
                  android:textColor="@color/back_bg"/>



          </LinearLayout>

