                  android:layout_marginRight="@dimen/_1sdp"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:textSize="14dp"
                   android:layout_marginTop="@dimen/_10sdp"
                  android:textColor="@color/black"/>

